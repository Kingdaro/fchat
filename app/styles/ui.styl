
.ui-border
  border-bottom: 3px solid $colors.light

.ui-shadow
  box-shadow: 0px 2px 8px rgba(black, 0.3)

.ui-rounded
  border-radius: 0.2rem

.ui-faded
  opacity: 0.6

.ui-shade
  @extend .ui-fullscreen
  background-color: rgba(black, 0.5)

.ui-panel
  @extend .color-main, .ui-shadow, .ui-padding-2, .ui-max-width-8, .ui-text-center
  padding-left: 1rem
  padding-right: 1rem
  width: max-content

.ui-input
  @extend .color-dark, .ui-border, .ui-width-5, .flex

  input, textarea
    @extend .ui-padding-2, .ui-text-small
    width: 100%

  .ui-icon
    @extend .ui-padding-2
    position: absolute

.ui-input-icon-left
  @extend .ui-input

  input, textarea
    padding-left: 2.2rem

  .ui-icon
    opacity: 0.5
    pointer-events: none

.ui-button
  @extend .color-dark, .ui-padding-2, .ui-min-width-2, .ui-rounded, .ui-text-small
