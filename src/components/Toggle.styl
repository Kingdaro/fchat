@require '../styles/vars'

:local
  .toggle
    font-size: 90%
    opacity: 0.7
    border-bottom: 1px solid transparent
    transition: 0.2s

    animate-press()

    &:hover
      opacity: 1
      border-bottom-color: rgba($text-color, 0.3)

  .checked
    opacity: 0.8

  .disabled
    opacity: 0.3
    pointer-events: none
