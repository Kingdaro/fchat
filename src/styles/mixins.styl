@import 'variables'

transition(state = hover, props = all)
  transition: 0.25s props

  &:{state}
    {block}


border-highlight()
  border-bottom: 3px solid lighten(fg-color, 20%)

  +transition(focus)
    border-bottom-color: lighten(fg-color, 40%)


inherit-text()
  color: inherit
  font: inherit
