@import 'variables'

transition(state = hover, props = all)
  transition: 0.25s props

  &:{state}
    {block}

border-highlight(color = lighten(fg-color, 20%))
  border-bottom: 3px solid color

inherit-text()
  color: inherit
  font: inherit

input-styles(width = auto)
  background: bg-color
  margin-bottom: 1.2em
  width: width

  border-highlight()
  +transition(focus)
    border-highlight(lighten(fg-color, 50%))
