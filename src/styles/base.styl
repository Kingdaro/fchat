@import 'variables'
@import 'mixins'

// root styles
:root
  color: text-color
  font: 14pt 'Roboto', sans-serif
  font-weight: regular

// tag styles
h1, h2, h3, h4, h5, h6
  font-weight: light
  margin: 0
  padding-bottom: 0.75em

input, textarea, button, div[contenteditable]
  border: none
  outline: none
  padding: input-padding
  margin: input-margin
  color: inherit bg-color
  border-highlight()

  +transition(focus)
    border-highlight(20%)

div[contenteditable]:empty::before
  content: attr(placeholder)
  cursor: text
  opacity: 0.5
  font-style: italic

button
  cursor: pointer
  hover-darken()

ul, ol
  list-style-type: none
  padding: 0em
  margin: 0em

img
  display: block // get rid of that random dumb space on images

a
  color: inherit
  text-decoration: none

u
  soft-underline()

::-webkit-scrollbar
  size: 12px

::-webkit-scrollbar-track
  background: darken(bg-color, 10%)

::-webkit-scrollbar-thumb
  background: lighten(fg-color, 10%)


.bg-color
  background-color: bg-color

.fg-color
  background-color: fg-color

.fullscreen
  position: fixed 0

.shade
  position: fixed 0
  background-color: rgba(0, 0, 0, 0.3)

.panel
  shadow()
  background-color: fg-color
  padding: 1.5em
  width: max-content
  text-align: center

.side-panel
  shadow()
  width: 12em
  height: 100vh

.border-highlight
  border-highlight()

.hover-darken
  hover-darken()

.hover-lighten
  hover-lighten()

.green-highlight
  green-highlight()

.scroll
  overflow-x: hidden
  overflow-y: scroll

.preserve-space
  white-space: pre-wrap


.box
  flex-shrink: 0

.box.horizontal
  box: horizontal

.box.vertical
  box: vertical

.box.center
  box: center middle

.box.center-vertical
  box: center

.box.wrap
  flex-wrap: wrap

.box.grow
  box-item: flex-1
  flex-shrink: 1

.box.divider
  size: 4px


.selection-list
  width: 14em
  height: 16em
  overflow: auto
  background-color: bg-color
  margin: input-margin
  border-highlight()

  li
    padding: 0.5em
    cursor: pointer
    user-select: none
    hover-darken()

    &.selected
      green-highlight()
