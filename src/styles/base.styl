@import 'variables'
@import 'mixins'

.container
  color: text-color
  font-size: 15pt
  font-family: 'Roboto Condensed'

*, ::before, ::after
  box-sizing: border-box
  border: none
  margin: 0

input, textarea, button
  border-highlight()
  background: bg-color
  outline: none


input, textarea
  inherit-text()
  font-size: 0.9em
  padding: 0.7em 0.7em


button
  inherit-text()
  padding: 0.4em 1em

  +transition(hover)
    background: darken(bg-color, 10%)
    cursor: pointer

for n in (1..6)
  h{n}
    font-weight: 300
    padding-bottom: 0.5em


::-webkit-scrollbar
  width: 0.6em

::-webkit-scrollbar-track
  background: darken(bg-color, 20%)

::-webkit-scrollbar-thumb
  background: lighten(fg-color, 5%)
