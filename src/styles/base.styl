@import 'variables'
@import 'mixins'

*, ::before, ::after
  box-sizing: border-box
  margin: 0
  border: none

.container
  color: hsl(205, 30%, 85%)
  font-family: 'Roboto', sans-serif
  font-size: 22px

input, textarea, button
  border-highlight()
  background: bg-color
  outline: none


input, textarea
  inherit-text()
  font-size: 0.9em
  padding: 0.7em 0.7em


button
  inherit-text()
  transition()
  padding: 0.4em 1em

  &:hover
    background: darken(bg-color, 10%)
    cursor: pointer

fieldset
  border: none
  padding: 16px 0px

for n in (1..6)
  h{n}
    font-weight: 300
    padding-bottom: 10px
