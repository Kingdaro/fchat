@import 'variables'
@import 'mixins'

// root styles
:root
  color: text-color
  font: 16pt 'Roboto Condensed', sans-serif

// tag styles
h1, h2, h3, h4, h5, h6
  font-weight: light
  margin: 0
  padding-bottom: 0.75em

input, textarea, button, div[contenteditable]
  border: none
  padding: 0.4em 0.8em
  margin-bottom: 1em
  color: inherit bg-color
  outline: none
  transition: 0.3s ease
  border-highlight()

  &:focus
    border-bottom-color: lighten(fg-color, 40%)

div[contenteditable]:empty::before
  content: attr(placeholder)
  cursor: text
  opacity: 0.5
  font-style: italic

button
  cursor: pointer
  hover-darken()

ul, ol
  list-style-type: none
  padding: 0em

::-webkit-scrollbar
  width: 0.7em

::-webkit-scrollbar-track
  background-color: bg-color

::-webkit-scrollbar-thumb
  background-color: fg-color

// class components
.fg-color
  background-color: fg-color

.bg-color
  background-color: bg-color

.hover-darken
  hover-darken()

.box
  flex-shrink: 0

.box-vertical
  box: vertical

.box-horizontal
  box: horizontal

.box-center
  box: center middle

.box-center-vertical
  box: center

.box-center-horizontal
  box: middle

.box-item-grow
  box-item: flex-1
  flex-shrink: 1

.box-wrap
  flex-wrap: wrap

.divider
  size: 4px

.text-center
  text-align: center

.panel
  background-color: fg-color
  padding: 1.5em
  width: max-content

.shade
  position: fixed 0
  background-color: rgba(0, 0, 0, 0.3)

.shadow
  box-shadow: 0px 8px 20px rgba(0, 0, 0, 0.5)

.fullscreen
  position: fixed 0

.border-highlight
  border-highlight()

.green, .green:hover
  color: lighten(green, 10%) rgba(green, 0.2)

.scroll
  overflow-y: scroll
