@import 'easing'

animate($property, $easing = ease)
  transition: $property 0.3s $easing

.fade
  &-transition
    animate: opacity
    opacity: 1

  &-enter, &-leave
    opacity: 0

.ui.overlay.fade
  &-transition
    .ui.panel
      animate: transform, $ease-out-quad
      transform: translateY(0em)

  &-enter, &-leave
    .ui.panel
      animate: transform, $ease-in-quad
      transform: translateY(-4em)

slide($side)
  .slide-{$side}
    &-transition
      animate: all, $ease-out-quad
      opacity: 1
      .ui.side-panel
        animate: all
        {$side}: 0em

    &-enter, &-leave
      opacity: 0
      .ui.side-panel
        animate: all, $ease-in-quad
        {$side}: -14em

slide('left')
slide('right')
