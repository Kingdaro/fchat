@import 'App-colors'

/* root styles */
* {
  padding: 0
  margin: 0
  box-sizing: border-box
  color: inherit
  border: none
  outline: none
  outline-offset: 0
  resize: none
}

:root {
  font: 14pt 'Roboto', sans-serif
  font-weight: normal
  color: $text-color
}

h1, h2, h3, h4, h5, h6 {
  font-family: 'Roboto Condensed', sans-serif
  font-weight: lighter
  opacity: 0.9
  margin: 1rem 0
}

ul, ol {
  list-style: none
}

a {
  text-decoration: none
}

p {
  margin-top: 0.8em
  margin-bottom: 0.8em
}

:focus {
  outline: 1px solid $theme-color-light
}

[contenteditable]:empty::after {
  content: attr(placeholder)
  opacity: 0.5
  font-style: italic
  cursor: text
}

::-webkit-scrollbar {
  width: 8px
  height: 8px
}

::-webkit-scrollbar-track, ::-webkit-scrollbar-corner {
  background-color: darken($theme-color-dark, 20%)
}

::-webkit-scrollbar-thumb {
  background-color: $theme-color-light
}

::-webkit-scrollbar-button {
  display: none
}

::selection {
  background: rgba(black, 0.3)
}
