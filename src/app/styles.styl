$theme-color = rgb(52, 73, 94)
$accent-color = rgb(83, 104, 136)
$text-color = rgb(236, 240, 241)

fullscreen()
  position: absolute
  left: 0
  right: 0
  top: 0
  bottom: 0

flex($direction = row)
  display: flex
  flex-direction: $direction

flex-align($justify, $align = $justify)
  justify-content: $justify
  align-items: $align

animate($time = 0.25s)
  transition: $time

input-styles()
  width: 10em
  background: darken($theme-color, 25%)
  padding: 0.3em 0.6em

accent-border()
  border-bottom: 2px solid $accent-color

  &:focus
    border-bottom-color: lighten($accent-color, 30%)

active-animation()
  display: inline-block
  transform: scale(1)
  animate()

  &:active
    transform: scale(0.95)
    animate(0.05s)

*
  margin: 0
  padding: 0
  box-sizing: border-box

:root
  color: $text-color
  font: 16pt Roboto, sans-serif

:focus
  outline: none

a
  color: inherit
  text-decoration: none

h1, h2, h3, h4, h5, h6
  font-family: 'Roboto Condensed'
  font-weight: 300
  opacity: 0.9

h1 { font-size: 2.4em }
h2 { font-size: 1.8em }
h3 { font-size: 1.5em }
h4 { font-size: 1.2em }
h5 { font-size: 1.1em }
h6 { font-size: 0.9em }

input, button, textarea
  font: inherit
  font-size: 0.9em
  color: inherit
  background: none
  border: none

fieldset
  border: none
  margin: 0.6em 0

.container
  fullscreen()
  flex()
  flex-align(center)
  background: $theme-color

.login-form
  text-align: center

.input
  active-animation()
  input-styles()
  accent-border()

.button
  active-animation()
  input-styles()
  width: min-content
  min-width: 4em
  opacity: 0.7
  cursor: pointer

  &:hover
    opacity: 1

.toggle
  active-animation()
  font-size: 90%
  opacity: 0.5
  border-bottom: 1px solid transparent

  &.toggle-checked
    opacity: 0.8

  &:hover
    opacity: 1
    border-bottom-color: rgba($text-color, 0.3)

.icon-input
  active-animation()
  position: relative

  i
    position: absolute
    padding: 0.3em 0.5em
    pointer-events: none
    opacity: 0.5

  input
    input-styles()
    accent-border()
    animate()
    padding-left: 2em
