@require 'mixins'
@require 'colors'

.input
  active-animation()
  input-styles()
  accent-border()

.button
  active-animation()
  input-styles()
  width: min-content
  min-width: 4em
  opacity: 0.7
  cursor: pointer

  &:hover
    opacity: 1

.textarea
  input-styles()
  accent-border()
  animate()

.toggle
  active-animation()
  font-size: 90%
  opacity: 0.5
  border-bottom: 1px solid transparent

  &.toggle-checked
    opacity: 0.8

  &:hover
    opacity: 1
    border-bottom-color: rgba($text-color, 0.3)

.icon-input
  active-animation()
  position: relative

  i
    position: absolute
    padding: 0.3em 0.5em
    pointer-events: none
    opacity: 0.5

  input
    input-styles()
    accent-border()
    animate()
    padding-left: 2em

.icon-label
  margin-left: 0.15em

.selection-list
  display: inline-block
  width: 14em
  height: 20em
  background: darken($theme-color, 20%)
  overflow-y: auto

  a
    active-animation()
    display: block
    padding: 0.35em 0.6em

  a.selection-list-active
    background: rgba($highlight-active, 0.5)

.character-status
  &-online  { color: rgb(33, 150, 243) }
  &-looking { color: rgb(32, 223, 109) }
  &-busy    { color: rgb(255, 152, 0) }
  &-away    { color: rgb(255, 241, 118) }
  &-dnd     { color: rgb(198, 103, 93) }
  &-idle    { color: rgb(171, 124, 255) }
  &-offline { color: rgba(62, 62, 62, 0.3) }

.character-gender
  &-male        { color: hsl(210, 50%, 60%) }
  &-female      { color: hsl(5, 90%, 78%) }
  &-transgender { color: hsl(35, 65%, 60%) }
  &-herm        { color: hsl(266, 83%, 72%) }
  &-shemale     { color: hsl(307, 63%, 72%) }
  &-cunt-boy    { color: hsl(134, 56%, 60%) }
  &-male-herm   { color: hsl(225, 100%, 66%) }
  &-none        { color: rgb(227, 218, 145) }

[data-tooltip]
  position: relative

  &::after
    animate()
    content: attr(data-tooltip)
    background: darken($theme-color, 50%)
    font-size: 0.9rem
    position: absolute
    padding: 0.3em 0.6em
    width: max-content
    max-width: 10em
    text-align: center
    border-radius: 0.15em
    pointer-events: none
    opacity: 0
    z-index: 9999
    transition-delay: 0s

  &:hover::after
    opacity: 1
    transition-delay: 0.3s

  &.tooltip-right
    &::after
      top: 50%
      transform: translateY(-50%)

    &:hover::after
      transform: translateY(-50%) translateX(0.5em)

  &.tooltip-bottom
    &::after
      top: 100%
      left: 50%
      transform: translateX(-50%)

    &:hover::after
      transform: translateX(-50%) translateY(0.3em)

.link
  color: lighten($theme-color, 80%)
  border-bottom: 1px solid rgba(lighten($theme-color, 80%), 0.3)
  opacity: 1
  animate()

  &:hover
    opacity: 0.8

.overlay-panel
  background: $theme-color
  width: max-content
  box-shadow: 0px 2px 6px rgba(black, 0.5)
  position: relative

.overlay-shade
  background: rgba(black, 0.5)
  fullscreen()
  flex-align(center)

.overlay-header
  background: darken($theme-color, 20%)
  padding: 0.5em 1em
  text-align: center
  accent-border(bottom)

.overlay-close
  padding: 0.3em 0.5em
  opacity: 0.3
  anchor(top right)
  animate()

  &:hover
    opacity: 0.7

// helpers for generic flex containers
.flex-row
  flex(row)

.flex-column
  flex(column)

.flex-grow
  flex-grow: 1

.flex-fixed
  flex-shrink: 0
