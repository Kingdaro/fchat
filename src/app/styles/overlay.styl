@require 'theme'
@require 'layout'
@require 'flex'
@require 'fade'
@require 'slide'
@require 'ease'

.overlay-panel
  background: $theme-color
  width: max-content
  box-shadow: 0px 2px 6px rgba(black, 0.5)
  position: relative

.overlay-shade
  background: rgba(black, 0.5)
  fullscreen()
  flex-align(center)

.overlay-enter-active
  animation: fade 0.3s ease
  .overlay-ease-down
    animation: ease-down 0.3s ease
  .overlay-slide-right
    animation: slide-right 0.3s ease

.overlay-leave-active
  animation: fade 0.3s ease reverse
  .overlay-ease-down
    animation: ease-down 0.3s ease reverse
  .overlay-slide-right
    animation: slide-right 0.3s ease reverse
